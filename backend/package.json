{
  "name": "backend",
  "version": "0.0.0",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf lib",
    "db:migration:generate": "drizzle-kit generate",
    "db:migrate:up": "drizzle-kit migrate",
    "db:seed": "tsx src/cli/seed.ts",
    "tts": "tsx src/cli/tts.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run typecheck && npm run lint && npm run format:check",
    "postinstall": "[ \"$NODE_ENV\" != \"production\" ] && npm run db:migrate:up || exit 0"
  },
  "dependencies": {
    "@fal-ai/client": "^1.0.2",
    "@libsql/client": "^0.14.0",
    "@pothos/core": "^4.3.0",
    "@valibot/to-json-schema": "^0.2.1",
    "drizzle-kit": "^0.26.2",
    "drizzle-orm": "^0.35.3",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.10.3",
    "openai": "^4.71.1",
    "rou3": "^0.5.1",
    "tsx": "^4.19.1",
    "valibot": "^0.42.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.9",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functions": "^0.0.7",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.2",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<BUILTIN_MODULES>",
      "",
      "<THIRD_PARTY_MODULES>",
      "",
      "^~/",
      "",
      "^[./]"
    ]
  },
  "private": true
}
